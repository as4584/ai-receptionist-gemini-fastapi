{
  "scenario": "complete_booking_flow",
  "description": "User provides all information upfront and confirms booking",
  "expected_flow": [
    "user_request_with_details",
    "assistant_confirmation", 
    "user_confirms",
    "tool_call",
    "assistant_success"
  ],
  "dialogue": [
    {
      "role": "user", 
      "content": "Hi, I'm Sarah and I'd like to book a haircut for tomorrow at 3pm."
    },
    {
      "role": "assistant", 
      "content": "Great! Let me confirm: haircut for Sarah at tomorrow at 3pm. Shall I book this for you?",
      "expected_actions": ["confirm_details"]
    },
    {
      "role": "user",
      "content": "Yes, please book it."
    },
    {
      "role": "assistant", 
      "content": "Perfect! I've booked your appointment. You'll receive a confirmation shortly.",
      "expected_actions": ["tool_call_book_appointment"],
      "expected_tool_call": {
        "name": "book_appointment",
        "arguments": {
          "customer_name": "Sarah",
          "service": "haircut", 
          "datetime": "tomorrow at 3pm"
        }
      }
    }
  ],
  "validation_rules": {
    "confirmation_before_booking": true,
    "tool_call_has_required_args": ["customer_name", "service", "datetime"],
    "success_message_contains": ["booked", "confirmation"]
  }
}