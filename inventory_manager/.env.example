# Flask Configuration
FLASK_ENV=production
SECRET_KEY=change-this-in-production
PORT=8010

# Google Sheets Configuration
GOOGLE_SERVICE_ACCOUNT_JSON=./service_account.json
GOOGLE_SHEET_NAME=Live ATS Inventory

# Lightspeed X-Series API Configuration  
LS_X_API_TOKEN=your_lightspeed_api_token_here
LS_ACCOUNT_DOMAIN=your_account_domain

# Optional: OAuth Configuration (if using OAuth instead of API token)
# LS_CLIENT_ID=your_client_id
# LS_CLIENT_SECRET=your_client_secret
# LS_REDIRECT_URI=http://localhost:8010/auth/callback
# LS_REFRESH_TOKEN=your_refresh_token

# Optional: Webhook Configuration
# LS_WEBHOOK_SECRET=your_webhook_secret_key

# Scheduler Configuration
SCHEDULER_TIMEZONE=UTC
SYNC_INTERVAL_HOURS=1
BACKUP_HOUR=2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/inventory.log

# Low Stock Configuration
LOW_STOCK_THRESHOLD=5

# Server Configuration
DOMAIN_NAME=localhost

# Future Features (Optional)
# DATABASE_URL=sqlite:///inventory.db
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# NOTIFICATION_EMAIL=admin@yourstore.com
