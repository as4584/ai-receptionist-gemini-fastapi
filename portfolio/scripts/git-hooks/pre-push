#!/bin/bash

# Git pre-push hook
# This hook is called by git push after it has checked the remote status,
# but before anything has been pushed.

echo "ğŸ”’ Running pre-push validation..."

# Run our comprehensive check
if ! ./scripts/pre-push-check.sh; then
    echo ""
    echo "âŒ PUSH BLOCKED: Fix the errors above before pushing!"
    echo "ğŸ’¡ Run './scripts/pre-push-check.sh' to see detailed errors"
    exit 1
fi

echo "âœ… Pre-push validation passed! Continuing with push..."
exit 0